@model HomeRepairHub.Models.Request

@{
    ViewData["Title"] = "طلب جديد";
    var problemTypes = new List<string> {
        "كهرباء",
        "تكييف وتبريد",
        "بناء وهيكل",
        "أجهزة منزلية",
        "أخرى"
    };
    var cities = new List<string> {
        "القدس",
        "رام الله",
        "نابلس",
        "الخليل",
        "جنين",
        "طولكرم",
        "قلقيلية",
        "بيت لحم",
        "أريحا",
        "سلفيت",
        "طوباس"
    };
}

<div class="max-w-2xl mx-auto">
    <div class="mb-8 text-center md:text-right">
        <h2 class="text-3xl font-bold text-white">تقديم طلب صيانة</h2>
        <p class="text-slate-400 mt-2">قم بملء النموذج أدناه لنتمكن من مساعدتك بأسرع وقت.</p>
    </div>

    <div class="bg-slate-900 rounded-3xl shadow-xl shadow-slate-950/50 border border-slate-800 overflow-hidden">
        <div class="p-8">
            <form asp-action="Create" method="post" class="space-y-8">
                
                <div>
                    <label class="block text-sm font-bold text-slate-300 mb-3">نوع المشكلة</label>
                    <div class="relative">
                        <select asp-for="ProblemType" class="w-full p-4 pl-10 bg-slate-950 border border-slate-700 rounded-xl text-white focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none transition-all cursor-pointer appearance-none">
                            @foreach (var type in problemTypes)
                            {
                                <option value="@type">@type</option>
                            }
                        </select>
                        <div class="absolute left-4 top-1/2 -translate-y-1/2 pointer-events-none text-slate-500">
                            <i data-lucide="chevron-down" class="w-5 h-5"></i>
                        </div>
                    </div>
                </div>
                 
                <div>
                    <label class="block text-sm font-bold text-slate-300 mb-3">المدينة</label>
                    <div class="relative">
                        <select asp-for="City" class="w-full p-4 pl-10 bg-slate-950 border border-slate-700 rounded-xl text-white focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none transition-all cursor-pointer appearance-none">
                            <option value="">اختر المدينة...</option>
                            @foreach (var city in cities)
                            {
                                <option value="@city">@city</option>
                            }
                        </select>
                        <div class="absolute left-4 top-1/2 -translate-y-1/2 pointer-events-none text-slate-500">
                            <i data-lucide="chevron-down" class="w-5 h-5"></i>
                        </div>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-slate-300 mb-3">المكان داخل المنزل</label>
                    <div class="relative">
                        <i data-lucide="map-pin" class="absolute right-4 top-1/2 -translate-y-1/2 text-slate-500 w-[18px] h-[18px]"></i>
                        <input asp-for="Location" required placeholder="مثال: الحمام الرئيسي، المطبخ، غرفة المعيشة" 
                               class="w-full pr-12 pl-4 py-4 bg-slate-950 border border-slate-700 rounded-xl text-white focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none transition-all placeholder-slate-600" />
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-bold text-slate-300 mb-3">وصف تفصيلي للمشكلة</label>
                    <div class="relative">
                        <i data-lucide="align-right" class="absolute right-4 top-4 text-slate-500 w-[18px] h-[18px]"></i>
                        <textarea asp-for="Description" required placeholder="يرجى شرح المشكلة بالتفصيل..." rows="5"
                                  class="w-full pr-12 pl-4 py-4 bg-slate-950 border border-slate-700 rounded-xl text-white focus:ring-2 focus:ring-amber-500 focus:border-amber-500 outline-none transition-all resize-none placeholder-slate-600"></textarea>
                    </div>
                </div>

                <div class="pt-4">
                    <button type="submit" class="w-full py-4 px-6 bg-gradient-to-r from-amber-500 to-orange-600 hover:from-amber-400 hover:to-orange-500 text-slate-950 rounded-xl font-bold text-lg shadow-lg shadow-orange-900/30 transition-all transform hover:-translate-y-1 flex justify-center items-center gap-3">
                        <i data-lucide="send" class="w-5 h-5 rtl:rotate-180"></i>
                        إرسال الطلب
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
